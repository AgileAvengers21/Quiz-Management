<?xml version="1.0" encoding="UTF-8"?>
<web-app version="4.0" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">
  
    <!-- Servlet Definitions -->
    <servlet>
        <servlet-name>ValidateStudent</servlet-name>
        <servlet-class>com.controller.ValidateStudent</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ValidateAdmin</servlet-name>
        <servlet-class>com.controller.ValidateAdmin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Admin</servlet-name>
        <servlet-class>com.admin.Admin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Instruction</servlet-name>
        <servlet-class>com.instructions.Instruction</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Provider</servlet-name>
        <servlet-class>com.provider.Provider</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Questions</servlet-name>
        <servlet-class>com.questions.Questions</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Students</servlet-name>
        <servlet-class>com.students.Students</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminDAO</servlet-name>
        <servlet-class>com.model.AdminDAO</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StudentsDAO</servlet-name>
        <servlet-class>com.model.StudentsDAO</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>QuestionDAO</servlet-name>
        <servlet-class>com.model.QuestionDAO</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InstructionDAO</servlet-name>
        <servlet-class>com.model.InstructionDAO</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InstructionInsert</servlet-name>
        <servlet-class>com.controller.InstructionInsert</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutStudent</servlet-name>
        <servlet-class>com.controller.LogoutStudent</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutAdmin</servlet-name>
        <servlet-class>com.controller.LogoutAdmin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>QuestionInsert</servlet-name>
        <servlet-class>com.controller.QuestionInsert</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StudentInsert</servlet-name>
        <servlet-class>com.controller.StudentInsert</servlet-class>
    </servlet>
    
    <!-- Servlet Mappings -->
    <servlet-mapping>
        <servlet-name>ValidateStudent</servlet-name>
        <url-pattern>/ValidateStudent</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ValidateAdmin</servlet-name>
        <url-pattern>/ValidateAdmin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Admin</servlet-name>
        <url-pattern>/Admin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Instructions</servlet-name>
        <url-pattern>/Instructions</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Provider</servlet-name>
        <url-pattern>/Provider</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Questions</servlet-name>
        <url-pattern>/Questions</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Students</servlet-name>
        <url-pattern>/Students</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminDAO</servlet-name>
        <url-pattern>/AdminDAO</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StudentsDAO</servlet-name>
        <url-pattern>/StudentsDAO</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>QuestionDao</servlet-name>
        <url-pattern>/QuestionDao</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InstructionDAO</servlet-name>
        <url-pattern>/InstructionDAO</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InstructionInsert</servlet-name>
        <url-pattern>/InstructionInsert</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutStudent</servlet-name>
        <url-pattern>/LogoutStudent</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutAdmin</servlet-name>
        <url-pattern>/LogoutAdmin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>QuestionInsert</servlet-name>
        <url-pattern>/QuestionInsert</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StudentInsert</servlet-name>
        <url-pattern>/StudentInsert</url-pattern>
    </servlet-mapping>

    <!-- Session Timeout -->
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>

</web-app>
